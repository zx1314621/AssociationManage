<insert id="addActivity" parameterType="po.ActivityCustom" useGeneratedKeys="false">
    INSERT INTO activity
    ( id,
      name,
      day,
      start_time,
      end_time,
      asid,
      status,
      place
    )
    VALUES
    (
    #{id},
    #{name},
    #{day},
    #{start_time},
    #{end_time},
    #{asid},
    #{status},
    #{place}
    )
  </insert>

